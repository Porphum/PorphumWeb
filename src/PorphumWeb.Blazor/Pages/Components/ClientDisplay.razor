@using PorphumReferenceBook.Logic.Models.Client

@if(Entity is null && NullCheck)
{
    @(NullMessage)
}
else
{
    @($"{Entity.Key} - {Entity.Name}")
}

@code {
    [Parameter]
    [EditorRequired]
    public Client Entity { get; set; } = null!;

    [Parameter]
    public bool NullCheck { get; set; } = false;

    [Parameter]
    public string NullMessage { get; set; } = "Клиент не задан";
}
