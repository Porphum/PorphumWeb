@using General.Abstractions.Storage;
@using General.Abstractions.Storage.Query;
@using PorphumReferenceBook.Logic.Abstractions.Storage.Repository;
@using PorphumReferenceBook.Logic.Abstractions.Storage.Repository.Query;
@using PorphumReferenceBook.Logic.Models.Product;
@using PorphumReferenceBook.Logic.Storage.Repository.Query;
@using PorphumSales.Logic.Abstractions.Storage.Repository;
@using PorphumSales.Logic.Models.Sales;
@using PorphumSales.Logic.Storage.Models;

@inject IStorageRepository repository;
@inject ISalesQueryParamFactory paramFactory;
@inject NavigationManager Navigation

@page "/sales/storage"

<PageTitle>Storage</PageTitle>


@if (products == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Count</th>
                <th>Last update</th>
                <th>History</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in products)
            {
                <tr>
                    <td>@($"{product.Product.MappedEntity.Group.Name} - {product.Product.MappedEntity.Name}")</td>
                    <td>@product.Count</td>
                    <td>@product.LastUpdate</td>
                    <td><button @onclick="@(()=>Navigation.NavigateTo($"sales/history/{product.Product.MapKey}"))">Show</button></td>
                </tr>
            }
        </tbody>
    </table>
    <p role="status">
        <button class="btn btn-primary" @onclick="DecrementCount">Prev</button>
        @(_skipCount + 1)
        <button class="btn btn-primary" @onclick="IncrementCount">Next</button>
    </p>
}



@code {
    private EditContext? _editContext;

    private readonly int PAGE_SIZE = 5;

    private int _skipCount = 0;

    private StorageProduct[]? products;

    private void UpdateProducts()
    {
        var query = (paramFactory as IQueryParamsFactory<ProductsStoragesParamType, ProductsStoragesParamConfig, ProductStorage>).InitQuery();

        var config = new ProductsStoragesParamConfig()
            {
                Skip = _skipCount * PAGE_SIZE,
                Limit = PAGE_SIZE
            };

        query.Append((paramFactory as IQueryParamsFactory<ProductsStoragesParamType, ProductsStoragesParamConfig, ProductStorage>).CreateParam(ProductsStoragesParamType.Skip, config));
        query.Append((paramFactory as IQueryParamsFactory<ProductsStoragesParamType, ProductsStoragesParamConfig, ProductStorage>).CreateParam(ProductsStoragesParamType.Limit, config));

        products = repository.GetByQuery(query).ToArray();
    }

    private void IncrementCount()
    {
        _skipCount += 1;

        UpdateProducts();
    }

    private void DecrementCount()
    {
        if (_skipCount == 0)
        {
            return;
        }
        _skipCount -= 1;

        UpdateProducts();
    }

    protected override void OnInitialized()
    {
        UpdateProducts();
    }
}
